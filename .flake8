[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    mlruns,
    .eggs,
    *.egg-info

# Ignore specific warnings
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (black compatibility)
    F401,  # imported but unused (common in __init__.py files)

per-file-ignores =
    __init__.py:F401